<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditVoucherActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DA0C0C"
            android:gravity="center"
            android:text=" Voucher khuyến mãi"
            android:textColor="@color/black"
            android:textSize="24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center|left"
                android:text="Mã voucher:"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editText_edit_code"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/duongvien_goctron"
                android:enabled="false"
                android:textColor="@color/black"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Khuyến mãi:"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editText_edit_discount"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:inputType="number"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/duongvien_goctron"
                android:enabled="false"
                android:textColor="@color/black"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Đơn tối thiểu:"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editText_edit_minBill"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/duongvien_goctron"
                android:enabled="false"
                android:textColor="@color/black"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:text="Thời gian bắt đầu:"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_edit_startTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/duongvien_goctron"
                android:textSize="18dp"
                android:enabled="false"
                android:textColor="@color/black" />

<!--            <EditText-->
<!--                android:id="@+id/editText_edit_startTime"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="48dp"-->
<!--                android:layout_marginTop="5dp"-->
<!--                android:background="@drawable/duongvien_goctron"-->
<!--                android:ems="10"-->
<!--                android:enabled="false"-->
<!--                android:inputType="date"-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="18dp" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:text="Thời gian kết thúc:"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_edit_endTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/duongvien_goctron"
                android:textSize="18dp"
                android:enabled="false"
                android:textColor="@color/black" />

<!--            <EditText-->
<!--                android:id="@+id/editText_edit_endTime"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="48dp"-->
<!--                android:layout_marginTop="5dp"-->
<!--                android:background="@drawable/duongvien_goctron"-->
<!--                android:ems="10"-->
<!--                android:enabled="false"-->
<!--                android:inputType="date"-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="20dp" />-->
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="20dp"
            android:weightSum="3">

            <Button
                android:id="@+id/btn_edit_voucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Sửa" />

            <Button
                android:id="@+id/btnUpdateVoucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Update" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>